<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base app theme -->
    <style name="Theme.LittleGenius" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- White base so the handoff is seamless -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Theme used by SplashActivity layout (your 5s PNG) -->
    <style name="Theme.LittleGenius.Splash" parent="Theme.LittleGenius">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/SplashFade</item>
    </style>

    <!-- Fade when leaving splash and entering main -->
    <style name="SplashFade">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>