From 7a1d4f2c6b9e0000000000000000000000000000 Mon Sep 17 00:00:00 2001
From: ChatGPT <devnull@example.com>
Date: Fri, 24 Oct 2025 08:15:00 +0000
Subject: [PATCH] Splash: no icon, no white flash; gradient background via
 Theme.LittleGenius

---
 app/src/main/res/drawable/splash_blank.xml | 24 ++++++++++++++++++++++++
 app/src/main/res/values-v31/styles.xml     | 16 +++++++++++++--
 app/src/main/res/values/styles.xml         | 18 +++++++++++++++--
 3 files changed, 54 insertions(+), 4 deletions(-)
 create mode 100644 app/src/main/res/drawable/splash_blank.xml

diff --git a/app/src/main/res/drawable/splash_blank.xml b/app/src/main/res/drawable/splash_blank.xml
new file mode 100644
index 0000000..1111111
--- /dev/null
+++ b/app/src/main/res/drawable/splash_blank.xml
@@ -0,0 +1,24 @@
+<?xml version="1.0" encoding="utf-8"?>
+<shape xmlns:android="http://schemas.android.com/apk/res/android"
+    android:shape="rectangle">
+    <!-- Full-bleed gradient that matches the app background -->
+    <gradient
+        android:type="linear"
+        android:angle="270"
+        android:startColor="#7FD7FF"   <!-- top: aqua/blue -->
+        android:endColor="#7FE0B2"     <!-- bottom: mint/green -->
+        android:centerColor="#8FE7CA"
+        android:centerY="0.45" />
+    <corners android:radius="0dp" />
+</shape>
diff --git a/app/src/main/res/values-v31/styles.xml b/app/src/main/res/values-v31/styles.xml
index 2222222..3333333 100644
--- a/app/src/main/res/values-v31/styles.xml
+++ b/app/src/main/res/values-v31/styles.xml
@@ -1,6 +1,18 @@
 <?xml version="1.0" encoding="utf-8"?>
 <resources>
-    <style name="Theme.LittleGenius" parent="Theme.Material3.DayNight.NoActionBar">
-        <!-- Android 12+ splash attributes live here -->
+    <!-- Android 12+ layer: keep the same theme name and add splash attrs -->
+    <style name="Theme.LittleGenius" parent="Theme.Material3.DayNight.NoActionBar">
+        <!-- Use no icon to avoid mismatched scale/flash -->
+        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
+        <!-- Transparent so the window background (our gradient) shows immediately -->
+        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
+        <!-- Hand control back to the same app theme right after the short system splash -->
+        <item name="postSplashScreenTheme">@style/Theme.LittleGenius</item>
     </style>
 </resources>
diff --git a/app/src/main/res/values/styles.xml b/app/src/main/res/values/styles.xml
index 4444444..5555555 100644
--- a/app/src/main/res/values/styles.xml
+++ b/app/src/main/res/values/styles.xml
@@ -1,6 +1,20 @@
 <?xml version="1.0" encoding="utf-8"?>
 <resources>
-    <style name="Theme.LittleGenius" parent="Theme.Material3.DayNight.NoActionBar">
-        <!-- Base theme for all API levels -->
+    <!-- Base theme used across all API levels -->
+    <style name="Theme.LittleGenius" parent="Theme.Material3.DayNight.NoActionBar">
+        <!-- Make system bars transparent so gradient is continuous -->
+        <item name="android:statusBarColor">@android:color/transparent</item>
+        <item name="android:navigationBarColor">@android:color/transparent</item>
+
+        <!-- This drives the full-bleed gradient while Compose starts -->
+        <item name="android:windowBackground">@drawable/splash_blank</item>
+
+        <!-- Keep action bar/title out of the way; we render our own top bar in Compose -->
+        <item name="android:windowNoTitle">true</item>
+        <item name="android:windowFullscreen">false</item>
     </style>
 </resources>
